        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="6" Grid.RowSpan="20" Grid.ColumnSpan="19" >
            <Image Source="/Imgs/shop_panel.png" Name="Title"  />
        </Border>
        <Border Grid.Row="3" Grid.RowSpan="1" Grid.ColumnSpan="9"  Grid.Column="11">
            <Image Source="/Imgs/SIGN UP.png" Name="vjjest" />
        </Border>
        <Border Grid.Row="5" Grid.RowSpan="1" Grid.ColumnSpan="3"  Grid.Column="10">
            <Image Source="/Imgs/Email.png" Name="vjjjkjest" />
        </Border>
        <Border Grid.Row="7" Grid.RowSpan="1" Grid.ColumnSpan="5"  Grid.Column="10">
            <Image Source="/Imgs/Username.png" Name="vjhjjjkjest" />
        </Border>
        <Border Grid.Row="9" Grid.RowSpan="1" Grid.ColumnSpan="5"  Grid.Column="10">
            <Image Source="/Imgs/Password.png" Name="Password" />
        </Border>
        <Border Grid.Row="11" Grid.RowSpan="1" Grid.ColumnSpan="5"  Grid.Column="10">
            <Image Source="/Imgs/Password.png" Name="Password2" />
        </Border>
        <TextBox x:Name="Email" BorderBrush="Black" BorderThickness="5" Grid.Row="5" Grid.Column="14" Grid.ColumnSpan="6" Background="White"></TextBox>
        <TextBox x:Name="Username" BorderBrush="Black" BorderThickness="5" Grid.Row="7" Grid.Column="16" Grid.ColumnSpan="5" Background="White"></TextBox>
        <PasswordBox x:Name="Passwordb" BorderBrush="Black" BorderThickness="5" Grid.Row="9" Grid.Column="16" Grid.ColumnSpan="5" Background="White"></PasswordBox>
        <PasswordBox x:Name="Passwordb2" BorderBrush="Black" BorderThickness="5" Grid.Row="11" Grid.Column="16" Grid.ColumnSpan="5" Background="White"></PasswordBox>
        <Button x:Name="playb2"  FontSize="50" Grid.Row="13" Grid.RowSpan="3" Grid.Column="13" Grid.ColumnSpan="4" HorizontalAlignment="Stretch" Background="Transparent"  Click="playb2_Click"   >
            <Image Source="/Imgs/send.png" x:Name="sendbtn"  Margin="0"></Image>
        </Button>
        <Button x:Name="backbtn"   Grid.Row="17" Grid.Column="22" Grid.ColumnSpan="7" Grid.RowSpan="3" Background="Transparent" Click="backbtn_Click"  PointerExited="backbtn_PointerExited" PointerEntered="backbtn_PointerEntered" HorizontalAlignment="Right"  >

            <Image Source="/Imgs/backbtn.png" x:Name="backimg" ></Image>
        </Button>
        <Button Grid.Row="15" Grid.RowSpan="3" Grid.ColumnSpan="11" Background="Transparent" PointerEntered="Button_PointerEntered" PointerExited="Button_PointerExited" Click="Button_Click"  Grid.Column="10" VerticalAlignment="Center">
            <Image  x:Name="loginbtn"  Source="/Imgs/haveAccount.png"  />
        </Button>
    </Grid>
</Page>
