            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Imgs/background.png"></ImageBrush>
        </Grid.Background>
       
        <GameServices:GameScene x:ConnectionId='2' x:Name="scene" Grid.ColumnSpan="24" Grid.RowSpan="30"></GameServices:GameScene>
        <MediaElement x:ConnectionId='3' x:Name="Break_sound" AutoPlay="False" IsLooping="False" Volume="0.8"/>
        <MediaElement x:ConnectionId='4' x:Name="Heart_sound" AutoPlay="False" IsLooping="False" Volume="0.8"/>

        <MediaElement x:ConnectionId='5' x:Name="BackgroundMusic" AutoPlay="True" IsLooping="True" Volume="0.5"/>
        <MediaElement x:ConnectionId='6' x:Name="GunShot" AutoPlay="False" IsLooping="False" Volume="0.5"/>
        <MediaElement x:ConnectionId='7' x:Name="coin_sound" AutoPlay="False" IsLooping="False" Volume="0.8"/>
        <MediaElement x:ConnectionId='8' x:Name="coin_sound2" AutoPlay="False" IsLooping="False" Volume="0.8"/>
        <MediaElement x:ConnectionId='9' x:Name="coin_sound3" AutoPlay="False" IsLooping="False" Volume="0.8"/>
        <MediaElement x:ConnectionId='10' x:Name="coin_sound4" AutoPlay="False" IsLooping="False" Volume="0.8"/>





        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"  Grid.ColumnSpan="6">
            <Image x:ConnectionId='36' Source="/Imgs/health_bar(withoutHP).png" Name="Tjjitlej" />
        </Border>
       

        <Border Grid.Row="0" Grid.Column="4" Grid.RowSpan="2"  Grid.ColumnSpan="1"  VerticalAlignment="top">
            <Image x:ConnectionId='35' Source="/Assets/Heart/heart.png" Name="heart1"  />
        </Border>


        <Button x:ConnectionId='11' x:Name="home_btn" FontSize="50" Grid.Row="0" Grid.RowSpan="3" Grid.Column="21" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Background="Transparent"                   >

            <Image x:ConnectionId='34' Source="/Imgs/homeBtn.png" x:Name="sign_in_gimage"></Image>
        </Button>
        <Button x:ConnectionId='12' x:Name="stopbtn" FontSize="50" Grid.Row="0" Grid.RowSpan="3" Grid.Column="19" Grid.ColumnSpan="3"                        Background="Transparent">

            <Image x:ConnectionId='33' Source="/Imgs/pause_btn.png" x:Name="sign_inf_gimage"></Image>
        </Button>


        <Border Grid.Row="0" Grid.Column="5" Grid.RowSpan="2"  Grid.ColumnSpan="1" VerticalAlignment="top">
            <Image x:ConnectionId='32' Source="/Assets/Heart/heart.png" Name="heart2"  />
        </Border>
        <Border Grid.Row="0" Grid.Column="6" Grid.RowSpan="2"  Grid.ColumnSpan="1" VerticalAlignment="Top" >
            <Image x:ConnectionId='31' Source="/Assets/Heart/heart.png" Name="heart3"  />
        </Border>
        <Border Grid.Row="0" Grid.Column="7" Grid.RowSpan="2"  Grid.ColumnSpan="1" VerticalAlignment="Top" >
            <Image x:ConnectionId='30' Source="/Assets/Heart/heart.png" Name="heart4"  />
        </Border>
        <Viewbox Grid.Column="4" Grid.Row="2" Grid.RowSpan="1" VerticalAlignment="Top">
            <TextBlock x:ConnectionId='29' Margin="0,-7,0,0" x:Name="coin_holder" Foreground="White">0</TextBlock>
        </Viewbox>
        <Viewbox Grid.Column="8" Grid.Row="0" Grid.RowSpan="1" Grid.ColumnSpan="8" >
            <TextBlock x:ConnectionId='28'  x:Name="User_Name" Foreground="Black">Anonymous</TextBlock>
        </Viewbox>

        <Grid x:ConnectionId='13' x:Name="PopupMenu" Grid.RowSpan="20" Grid.ColumnSpan="29"  BorderThickness="2" Visibility="Collapsed">
            <Grid.RowDefinitions>

                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>


            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="20" Grid.ColumnSpan="19" >
                <Image x:ConnectionId='27' Source="/Imgs/shop_panel.png" Name="Title"  />
            </Border>
            <Border Grid.Row="3" Grid.Column="7" Grid.RowSpan="2" Grid.ColumnSpan="7" >
                <Image x:ConnectionId='26' Source="/Imgs/pause.png" Name="title"   />
            </Border>
            <Button x:ConnectionId='20' x:Name="playb"  FontSize="50" Grid.Row="6" Grid.RowSpan="2" Grid.Column="8" Grid.ColumnSpan="4" HorizontalAlignment="Stretch" Background="Transparent"                       >

                <Image x:ConnectionId='25' Source="/Imgs/resume.png" x:Name="playimage" Stretch="Fill"></Image>
            </Button>

            <Button x:ConnectionId='21' x:Name="tryagain_btn"  FontSize="50" Grid.Row="9" Grid.RowSpan="2" Grid.Column="8" Grid.ColumnSpan="5" HorizontalAlignment="Stretch" Background="Transparent"                            >

                <Image x:ConnectionId='24' Source="/Imgs/try_again.png" x:Name="tryagain" Stretch="Fill"></Image>
            </Button>
            <Button x:ConnectionId='22' x:Name="options_btn"  FontSize="50" Grid.Row="12" Grid.RowSpan="2" Grid.Column="8" Grid.ColumnSpan="5" HorizontalAlignment="Stretch" Background="Transparent"                            >

                <Image x:ConnectionId='23' Source="/Imgs/options_btn.png" x:Name="options" Stretch="Fill"></Image>
            </Button>
           

        </Grid>

        <Grid x:ConnectionId='14' x:Name="GameLost" 
      Grid.RowSpan="30" Visibility="Collapsed"
      Grid.ColumnSpan="30" 
      Background="#CC000000" >
           

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Game Over Title -->
                <TextBlock Text="You Lost" 
                   FontSize="48" 
                   FontWeight="Bold" 
                   Foreground="Red" 
                   TextAlignment="Center" 
                   Margin="0,0,0,20"/>
                <!-- Buttons Row -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <!-- Try Again Button -->
                    <Button x:ConnectionId='18' Content="Try Again"                      
                     
                    Width="150" 
                    Height="50" 
                    Margin="10" 
                    Background="DarkGray" 
                    Foreground="White" 
                    FontSize="20"/>
                    <!-- Back to Menu Button -->
                    <Button x:ConnectionId='19' Content="Back to Menu"                       
                    
                    Width="150" 
                    Height="50" 
                    Margin="10" 
                    Background="DarkGray" 
                    Foreground="White" 
                    FontSize="20"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid x:ConnectionId='15' x:Name="GameWonPopup"  Visibility="Collapsed"
      Grid.RowSpan="30" 
      Grid.ColumnSpan="30" 
      Background="#CC000000" >

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <!-- Title -->
                <TextBlock Text="You Won!" 
                   FontSize="48" 
                   FontWeight="Bold" 
                   Foreground="Green" 
                   TextAlignment="Center" 
                   Margin="0,0,0,30"/>
                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:ConnectionId='16' Content="Next Level" 
                                           
                    Width="150" 
                    Height="50" 
                    Margin="10" 
                    Background="DarkGray" 
                    Foreground="White" 
                    FontSize="20"/>
                    <Button x:ConnectionId='17' Content="Back to Menu" 
                                       
                    Width="150" 
                    Height="50" 
                    Margin="10" 
                    Background="DarkGray" 
                    Foreground="White" 
                    FontSize="20"/>
                </StackPanel>
            </StackPanel>
        </Grid>

    </Grid>
   

</Page>

